{
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "name": "account",
                    "groups": [
                        {
                            "label": "Cortex API target and credentials",
                            "options": {
                                "expand": true,
                                "isExpandable": false
                            },
                            "fields": [
                                "name",
                                "xsoar_url",
                                "xsoar_api_keyid",
                                "xsoar_api_key",
                                "xsoar_ssl_verify"
                            ]
                        },
                        {
                            "label": "RBAC and other settings",
                            "options": {
                                "expand": true,
                                "isExpandable": false
                            },
                            "fields": [
                                "rbac_roles"
                            ]
                        }
                    ],
                    "table": {
                        "actions": [
                            "edit",
                            "delete",
                            "clone"
                        ],
                        "header": [
                            {
                                "label": "Name",
                                "field": "name"
                            },
                            {
                                "label": "Cortex XSOAR URL",
                                "field": "xsoar_url"
                            },
                            {
                                "label": "Cortex XSOAR API Key ID",
                                "field": "xsoar_api_keyid"
                            }
                        ]
                    },
                    "entity": [
                        {
                            "type": "text",
                            "label": "Name",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Length of ID should be between 1 and 50",
                                    "minLength": 1,
                                    "maxLength": 50
                                },
                                {
                                    "type": "regex",
                                    "errorMsg": "Name must begin with a letter and consist exclusively of alphanumeric characters and underscores.",
                                    "pattern": "^[a-zA-Z]\\w*$"
                                }
                            ],
                            "field": "name",
                            "help": "Enter a unique name for this account. (default: xsoar)",
                            "required": true
                        },
                        {
                            "type": "text",
                            "label": "API URL",
                            "help": "The XSOAR API url, In Cortex XSOAR, navigate to Settings & Info > Settings > Integrations > API Keys. example: https://api-company.us.com/xsoar/public/v1",
                            "field": "xsoar_url",
                            "required": true,
                            "options": {
                                "display": true
                            },
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Value should be in the format https://<fqdn>",
                                    "pattern": "^(https://[a-zA-Z0-9._-]+).*$"
                                }
                            ]
                        },
                        {
                            "type": "text",
                            "label": "API Key ID",
                            "encrypted": false,
                            "help": "In Cortex XSOAR, navigate to Settings & Info > Settings > Integrations > API Keys. In the API Keys table, locate the ID field.",
                            "field": "xsoar_api_keyid",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Non empty value is required.",
                                    "pattern": "^.+$"
                                }
                            ]
                        },
                        {
                            "type": "text",
                            "label": "API Key",
                            "encrypted": true,
                            "help": "In Cortex XSOAR, navigate to Settings & Info > Settings > Integrations > API Keys. Select New Key and copy the API Key. (see: https://docs-cortex.paloaltonetworks.com/r/Cortex-XSOAR-8-API/Get-started-with-Cortex-XSOAR-8-APIs)",
                            "field": "xsoar_api_key",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Non empty value is required.",
                                    "pattern": "^.+$"
                                }
                            ]
                        },
                        {
                            "type": "radio",
                            "label": "SSL certificate verify",
                            "field": "xsoar_ssl_verify",
                            "defaultValue": "1",
                            "help": "Enable or disable SSL verification.",
                            "required": true,
                            "options": {
                                "items": [
                                    {
                                        "value": "1",
                                        "label": "Yes"
                                    },
                                    {
                                        "value": "0",
                                        "label": "No"
                                    }
                                ],
                                "display": true
                            }
                        },
                        {
                            "type": "text",
                            "label": "Role Based Access Control",
                            "help": "A comma separated list of Splunk roles a user must be a member of to be allowed to used this account, the role must be a true membership",
                            "field": "rbac_roles",
                            "options": {
                                "display": true
                            },
                            "defaultValue": "admin,sc_admin,trackme_user,trackme_power,trackme_admin",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Non empty value is required.",
                                    "pattern": "^.+$"
                                }
                            ]
                        }
                    ],
                    "title": "XSOAR Account"
                },
                {
                    "name": "resilient_store",
                    "groups": [
                        {
                            "label": "Resilient Store Configuration",
                            "options": {
                                "expand": true,
                                "isExpandable": false
                            },
                            "fields": [
                                "enable_resilient_store",
                                "max_attempts"
                            ]
                        }
                    ],
                    "entity": [
                        {
                            "type": "radio",
                            "label": "Enable Resilient Store",
                            "field": "enable_resilient_store",
                            "defaultValue": "1",
                            "help": "Enable or disable the resilient store.",
                            "required": true,
                            "options": {
                                "items": [
                                    {
                                        "value": "1",
                                        "label": "Yes"
                                    },
                                    {
                                        "value": "0",
                                        "label": "No"
                                    }
                                ],
                                "display": true
                            }
                        },
                        {
                            "type": "text",
                            "label": "Max number of attempts",
                            "help": "This defines the maximum number of attempts to retry a previously failed request to XSOAR, once this number of attempt is reached, the failing transation is permanently removed from the resilient store and will not be re-attempted. The default value is 96 which means 24 hours as the default scheduled is once every 15 minutes.",
                            "defaultValue": 96,
                            "required": true,
                            "field": "max_attempts",
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Must be a valid number.",
                                    "pattern": "^\\d+$"
                                }
                            ]
                        }
                    ],
                    "title": "Resilient Store"
                },
                {
                    "name": "proxy",
                    "entity": [
                        {
                            "type": "checkbox",
                            "label": "Enable",
                            "field": "proxy_enabled"
                        },
                        {
                            "type": "singleSelect",
                            "label": "Proxy Type",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "http",
                                        "label": "http"
                                    },
                                    {
                                        "value": "socks4",
                                        "label": "socks4"
                                    },
                                    {
                                        "value": "socks5",
                                        "label": "socks5"
                                    }
                                ]
                            },
                            "defaultValue": "http",
                            "field": "proxy_type",
                            "validators": [
                                {
                                    "type": "regex",
                                    "errorMsg": "Non empty value is required.",
                                    "pattern": "^.+$"
                                }
                            ]
                        },
                        {
                            "type": "text",
                            "label": "Host",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max host length is 4096",
                                    "minLength": 0,
                                    "maxLength": 4096
                                }
                            ],
                            "field": "proxy_url"
                        },
                        {
                            "type": "text",
                            "label": "Port",
                            "validators": [
                                {
                                    "type": "number",
                                    "range": [
                                        1,
                                        65535
                                    ]
                                }
                            ],
                            "field": "proxy_port"
                        },
                        {
                            "type": "text",
                            "label": "Username",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max length of username is 50",
                                    "minLength": 0,
                                    "maxLength": 50
                                }
                            ],
                            "field": "proxy_username"
                        },
                        {
                            "type": "text",
                            "label": "Password",
                            "validators": [
                                {
                                    "type": "string",
                                    "errorMsg": "Max length of password is 8192",
                                    "minLength": 0,
                                    "maxLength": 8192
                                }
                            ],
                            "encrypted": true,
                            "field": "proxy_password"
                        },
                        {
                            "type": "checkbox",
                            "label": "Reverse DNS resolution",
                            "field": "proxy_rdns"
                        }
                    ],
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    },
                    "title": "Proxy Setup"
                },
                {
                    "type": "loggingTab"
                }
            ],
            "title": "Configuration",
            "description": "Configure the TrackMe Addon for Cortex XSOAR"
        }
    },
    "meta": {
        "name": "TA-trackme-xsoar",
        "restRoot": "ta_trackme_xsoar",
        "version": "1.0.0",
        "displayName": "TA-trackme-xsoar",
        "schemaVersion": "0.0.9",
        "_uccVersion": "5.53.0"
    }
}
